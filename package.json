{
  "name": "vulnzap",
  "displayName": "VulnZap",
  "description": "AI-powered security analysis for JavaScript, TypeScript, React (JSX/TSX), Python, and Java code. Detects vulnerabilities like XSS, SQL injection, and weak cryptography with high accuracy.",
  "version": "0.3.0",
  "publisher": "vulnzap",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/VulnZap/vulnzap-vscode-extention.git"
  },
  "license": "MIT",
  "keywords": [
    "security",
    "vulnerability",
    "static analysis",
    "code review",
    "ai-powered",
    "linter"
  ],
  "bugs": {
    "url": "https://github.com/VulnZap/vulnzap-vscode-extention/issues"
  },
  "homepage": "https://github.com/VulnZap/vulnzap-vscode-extention#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:python",
    "onLanguage:java",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vulnzap.enable",
        "title": "Enable Security Review",
        "category": "Security"
      },
      {
        "command": "vulnzap.disable",
        "title": "Disable Security Review",
        "category": "Security"
      },
      {
        "command": "vulnzap.scanFile",
        "title": "Scan Current File",
        "category": "Security"
      },
      {
        "command": "vulnzap.selectApiProvider",
        "title": "Configure VulnZap API",
        "category": "Security"
      },
      {
        "command": "vulnzap.configureApiKeys",
        "title": "Configure VulnZap API",
        "category": "Security"
      },
      {
        "command": "vulnzap.toggleASTPrecision",
        "title": "Toggle AST-Guided Precision Analysis",
        "category": "Security"
      },
      {
        "command": "vulnzap.toggle",
        "title": "Toggle Security Review",
        "category": "Security"
      },
      {
        "command": "vulnzap.refreshSecurityView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vulnzap.clearAllIssues",
        "title": "Clear All Issues",
        "icon": "$(clear-all)"
      },
      {
        "command": "vulnzap.login",
        "title": "Log In to VulnZap",
        "category": "Security"
      },
      {
        "command": "vulnzap.logout",
        "title": "Sign Out of VulnZap",
        "category": "Security",
        "icon": "$(sign-out)"
      },
      {
        "command": "vulnzap.scanDependencies",
        "title": "Scan Dependencies for Vulnerabilities",
        "category": "Security",
        "icon": "$(package)"
      },
      {
        "command": "vulnzap.forceDependencyScan",
        "title": "Force Dependency Scan (Ignore Cache)",
        "category": "Security",
        "icon": "$(refresh)"
      },
      {
        "command": "vulnzap.dependencyCacheStats",
        "title": "View Dependency Cache Statistics",
        "category": "Security",
        "icon": "$(info)"
      },
      {
        "command": "vulnzap.cleanDependencyCache",
        "title": "Clean Dependency Cache",
        "category": "Security",
        "icon": "$(trash)"
      },
      {
        "command": "vulnzap.updateDependencyToVersion",
        "title": "Update Dependency to Specific Version",
        "category": "Security",
        "icon": "$(arrow-up)"
      },
      {
        "command": "vulnzap.showUpdateCommand",
        "title": "Show Update Command",
        "category": "Security",
        "icon": "$(terminal)"
      },
      {
        "command": "vulnzap.fixAllDependencies",
        "title": "Fix All Dependencies",
        "category": "Security",
        "icon": "$(tools)"
      },
      {
        "command": "vulnzap.showOutputChannel",
        "title": "Show VulnZap Output Logs",
        "category": "Security",
        "icon": "$(output)"
      },
      {
        "command": "vulnzap.optimizeLayout",
        "title": "Optimize Layout for VulnZap",
        "category": "Security",
        "icon": "$(layout)"
      },
      {
        "command": "vulnzap.showFileExclusions",
        "title": "Show File Exclusion Information",
        "category": "Security",
        "icon": "$(info)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vulnzap-security",
          "title": "VulnZap Security",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "vulnzap-security": [
        {
          "id": "vulnzap.usageBar",
          "name": "Usage",
          "when": "vulnzap.loggedIn",
          "type": "webview"
        },
        {
          "id": "vulnzap.loginView",
          "name": "Login",
          "when": "vulnzap.notLoggedIn",
          "type": "webview"
        },
        {
          "id": "vulnzap.securityView",
          "name": "Security Analysis",
          "when": "vulnzap.loggedIn",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "vulnzap.enable",
          "when": "true"
        },
        {
          "command": "vulnzap.disable",
          "when": "true"
        },
        {
          "command": "vulnzap.scanFile",
          "when": "editorIsOpen"
        },
        {
          "command": "vulnzap.selectApiProvider",
          "when": "true"
        },
        {
          "command": "vulnzap.configureApiKeys",
          "when": "true"
        },
        {
          "command": "vulnzap.toggle",
          "when": "true"
        },
        {
          "command": "vulnzap.refreshSecurityView",
          "when": "false"
        },
        {
          "command": "vulnzap.clearAllIssues",
          "when": "true"
        },
        {
          "command": "vulnzap.scanDependencies",
          "when": "true"
        },
        {
          "command": "vulnzap.forceDependencyScan",
          "when": "true"
        },
        {
          "command": "vulnzap.dependencyCacheStats",
          "when": "true"
        },
        {
          "command": "vulnzap.cleanDependencyCache",
          "when": "true"
        },
        {
          "command": "vulnzap.updateDependencyToVersion",
          "when": "true"
        },
        {
          "command": "vulnzap.showUpdateCommand",
          "when": "true"
        },
        {
          "command": "vulnzap.fixAllDependencies",
          "when": "true"
        },
        {
          "command": "vulnzap.showOutputChannel",
          "when": "true"
        },
        {
          "command": "vulnzap.logout",
          "when": "true"
        },
        {
          "command": "vulnzap.showFileExclusions",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "vulnzap.refreshSecurityView",
          "when": "view == vulnzap.securityView",
          "group": "navigation"
        },
        {
          "command": "vulnzap.clearAllIssues",
          "when": "view == vulnzap.securityView",
          "group": "navigation"
        },
        {
          "command": "vulnzap.scanDependencies",
          "when": "view == vulnzap.securityView",
          "group": "dependencies"
        },
        {
          "command": "vulnzap.dependencyCacheStats",
          "when": "view == vulnzap.securityView",
          "group": "dependencies"
        }
      ],
      "view/item/context": [
        {
          "command": "vulnzap.scanFile",
          "when": "view == vulnzap.securityView && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "VulnZap Security Scanner",
      "properties": {
        "vulnzap.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable on-save security scanning"
        },
        "vulnzap.vulnzapApiKey": {
          "type": "string",
          "default": "",
          "description": "VulnZap API key for security analysis"
        },
        "vulnzap.enableDependencyScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic dependency vulnerability scanning when dependency files are saved"
        },
        "vulnzap.dependencyScanOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan dependencies when workspace is opened"
        },
        "vulnzap.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed debug logging for troubleshooting (visible in VulnZap output channel)"
        },
        "vulnzap.excludeFilePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional file patterns to exclude from security scanning (supports glob patterns like *.config.js, test/**/*.js). Built-in exclusions include package.json, node_modules/, dist/, etc."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --mode development --watch",
    "compile": "webpack --mode development",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts || true",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.7",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@babel/parser": "^7.27.7",
    "@babel/traverse": "^7.27.7",
    "@babel/types": "^7.27.7",
    "axios": "^1.6.0",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
